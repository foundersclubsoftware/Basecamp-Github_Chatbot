{
    "name": "basecamp-github-chatbot",
    "version": "0.2.2",
    "description": "A more advanced Basecamp chatbot to integrate GitHub and Basecamp",
    "main": "index.js",
    "scripts": {
        "build": "rm -rf dist && babel app --out-dir dist --copy-files --extensions \".ts\"",
        "run": "node dist/index.js",
        "dev:build": "docker-compose -f docker/development/docker-compose.yaml build",
        "dev:run": "docker-compose -f docker/development/docker-compose.yaml up",
        "production:build": "docker-compose -f docker/production/docker-compose.yaml build",
        "production:run": "docker-compose -f docker/production/docker-compose.yaml up",
        "test": "concurrently --names \"unit,integration\" -s \"all\" -c \"blue,green\" \"npm run test:unit\" \"npm run test:integration\"",
        "test:unit": "NODE_ENV=test jest --verbose --testPathPattern=\".+tests/unit/.+.spec.ts\"",
        "test:integration": "NODE_ENV=test jest --verbose --testPathPattern=\".+tests/integration/.+.spec.ts\" --runInBand",
        "lint": "eslint --max-warnings 0 \"app/**/*.ts\"",
        "format": "prettier --write \"{app,tests}/**/*.ts\""
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:foundersclubsoftware/Basecamp-Github_Chatbot.git"
    },
    "keywords": [
        "basecamp",
        "github",
        "chat",
        "bot",
        "chatbot"
    ],
    "author": "thrymgjol",
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/foundersclubsoftware/Basecamp-Github_Chatbot/issues"
    },
    "homepage": "https://github.com/foundersclubsoftware/Basecamp-Github_Chatbot#readme",
    "dependencies": {
        "@godaddy/terminus": "^4.4.1",
        "@kubernetes/client-node": "^0.12.0",
        "axios": "^0.19.2",
        "dotenv": "^8.2.0",
        "ejs": "^3.1.3",
        "express": "^4.17.1",
        "helmet": "^3.23.3",
        "jsonschema": "^1.2.6",
        "ws": "^7.3.0",
        "yargs": "^15.3.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.10.3",
        "@babel/core": "^7.10.3",
        "@babel/preset-env": "^7.10.3",
        "@babel/preset-typescript": "^7.10.1",
        "@types/dotenv": "^8.2.0",
        "@types/ejs": "^3.0.4",
        "@types/express": "^4.17.6",
        "@types/helmet": "0.0.47",
        "@types/jest": "^26.0.3",
        "@types/supertest": "^2.0.10",
        "@types/yargs": "^15.0.5",
        "@typescript-eslint/eslint-plugin": "^3.5.0",
        "@typescript-eslint/parser": "^3.5.0",
        "axios-mock-adapter": "^1.18.1",
        "babel-plugin-module-resolver": "^4.0.0",
        "concurrently": "^5.2.0",
        "eslint": "^7.3.1",
        "eslint-plugin-security": "^1.4.0",
        "husky": "^4.2.5",
        "jest": "^26.1.0",
        "jest-watch-typeahead": "^0.6.0",
        "lint-staged": "^10.2.11",
        "node-html-parser": "^1.2.20",
        "prettier": "^2.0.5",
        "supertest": "^4.0.2",
        "ts-jest": "^26.1.1",
        "typescript": "^3.9.5"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run lint && lint-staged"
        }
    },
    "lint-staged": {
        "app/**/*.ts": [
            "npx eslint"
        ],
        "*.ts": [
            "npm run format",
            "git add"
        ]
    }
}
